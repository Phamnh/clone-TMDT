@model IEnumerable<DoAnAsp.Areas.Admin.Models.BinhLuanModel>

@{
    ViewData["Title"] = "Index";
}

<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Products List</h4>
                    <div class="add-product">
                        <a asp-action="Create" style="background-color:aqua; color:black; font-size:20px; margin-top: -10px;"><b>Add bình luận</b></a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Ảnh</th>
                                <th>Tên</th>
                                <th>Nội dung</th>
                                <th>Ngày bình luận</th>
                                <th>Tên sản phẩm</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    <img src="~/template/admin/img/ @Html.DisplayFor(modelItem => item.Anh)" alt="Anh" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Noidung)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ngay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.sanpham.TenSP)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdBL" data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.IdBL" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
