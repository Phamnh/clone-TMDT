@model DoAnAsp.Areas.Admin.Models.NhaCungCapModel

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" style="color: white; padding-left:20px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdNCC" style="border: solid 1px white;"/>
            <div class="form-group">
                <label asp-for="TenNCC" class="control-label"></label>
                <input asp-for="TenNCC" class="form-control" style="border: solid 1px white;"/>
                <span asp-validation-for="TenNCC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SdtNCC" class="control-label"></label>
                <input asp-for="SdtNCC" class="form-control" style="border: solid 1px white;"/>
                <span asp-validation-for="SdtNCC" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TrangThai" style="border: solid 1px white;"/> @Html.DisplayNameFor(model => model.TrangThai)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" style="background-color:aqua; color:black; font-size:20px;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="padding-left:20px;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
