@model IEnumerable<DoAnAsp.Areas.Admin.Models.UserModel>

@{
    ViewData["Title"] = "Index";
}

<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Products List</h4>
                    <div class="add-product">
                        <a asp-action="Create" style="background-color:aqua; color:black; font-size:20px; margin-top: -10px;"><b>Add User</b></a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HotenUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SdtUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiachiUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UsernameUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PasswordUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TrangthaiUser)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.IdUser" data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.IdUser" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- Modal -->
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header" >
                                    <div style="display:flex;justify-content:space-between">
                                        <h4 class="modal-title" style="color:black">Thông báo</h4>
                                        <button type="button" class="close" data-dismiss="modal" style="background-color:#00ffff;width:50px;border-radius:6px">&times;</button>
                                    </div>
                                </div>
                                <div class="modal-body">
                                    <p style="color:#ef592d">Chào mừng bạn đến trang quản lý khách hàng</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal" style="background-color:#4caf50">Đóng</button>
                                </div>
                            </div>

                        </div>
                    </div>
                    @section Scripts{
                        <script>
                            $(document).ready(function () {
                                $('#myModal').modal('show');
                            })
                        </script>
                    }
