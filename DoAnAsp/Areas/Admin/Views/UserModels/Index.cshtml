@model IEnumerable<DoAnAsp.Areas.Admin.Models.UserModel>

@{
    ViewData["Title"] = "Index";
}

<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Products List</h4>
                    <div class="add-product">
                        <a onclick="showModal('@Url.Action("Create","UserModels",null,Context.Request.Scheme)','Thêm tài khoản user')" style="background-color:aqua; color:black; font-size:20px; margin-top: -10px;"><b>Add User</b></a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Họ tên</th>
                                <th>email</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>Username</th>
                                <th>Password</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HotenUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EmailUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SdtUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiachiUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UsernameUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PasswordUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TrangthaiUser)
                                    </td>
                                    <td>
                                        <a onclick="showModal('@Url.Action("Edit","UserModels",new {id=$"{item.IdUser}"},Context.Request.Scheme)','Cập nhật tài khoản user')" data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        <a onclick="showModal('@Url.Action("Delete","UserModels",new {id=$"{item.IdUser}"},Context.Request.Scheme)','Xóa tài khoản user')" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
