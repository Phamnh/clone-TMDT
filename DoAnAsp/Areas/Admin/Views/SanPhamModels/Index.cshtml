@model IEnumerable<DoAnAsp.Areas.Admin.Models.SanPhamModel>

@{
    ViewData["Title"] = "Index";
}
<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Products List</h4>
                    <div class="col-lg-6 col-md-7 col-sm-6 col-xs-12">
                        <div class="header-top-menu tabl-d-n hd-search-rp">
                            <div class="breadcome-heading">
                                <input type="text" placeholder="Search..." class="form-control" id="keyword" style="color: white">
                                <a id="chon"><i class="fa fa-search"></i></a>

                            </div>
                        </div>
                    </div>
                    <div class="add-product">
                        <a asp-action="Create" style="background-color:aqua; color:black; font-size:20px; margin-top: -10px;"><b>Add User</b></a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Tên sản phẩm</th>
                                <th>Ảnh</th>
                                <th>Giá</th>
                                <th>Đơn vị tính</th>
                                <th>Số lượng tồn kho</th>
                                <th>Nhà cung cấp</th>
                                <th>Loại sản phẩm</th>
                                <th>Mô tả</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody id="ketqua">

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenSP)
                                    </td>
                                    <td>
                                        <img src="~/template/admin/img/@Html.DisplayFor(modelItem => item.Anh)" alt="Anh" />

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Donvitinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Soluongton)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdNCC)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdLSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mota)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Trangthai)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.IdSP" data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.IdSP" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                    @section Scripts {
                        <script>
                            $(document).ready(function () {
                                $("#chon").click(function () {
                                    $.ajax({
                                        method: "GET",
                                        url: "../../api/SanPhamModels/GETdata",
                                        data: { 'keyword': $("#keyword").val() }
                                    }).done(function (data) {

                                        var dataJS = JSON.parse(data);
                                        console.log(dataJS);
                                        var i = '';
                                        $.each(dataJS, function (index, value) {
                                            var status = '';
                                            if (value.Trangthai) {
                                                status = 'checked'
                                            }
                                            i += ` <tr>
                                                                                <td>
                                                                                   ${value.TenSP}
                                                                                </td>
                                                                                <td>
                                                                                    <img src="/template/admin/img/${value.Anh}" alt="Anh" />

                                                                                </td>
                                                                                <td>
                                                                                    ${value.Gia}
                                                                                </td>
                                                                                <td>
                                                                                  ${value.Donvitinh}
                                                                                </td>
                                                                                <td>
                                                                                    ${value.Soluongton}
                                                                                </td>
                                                                                <td>
                                                                                   ${value.IdNCC}
                                                                                </td>
                                                                                <td>
                                                                                   ${value.IdLSP}
                                                                                </td>
                                                                                <td>
                                                                                    ${value.Mota}
                                                                                </td>
                                                                                <td>
                                                                                        <input type="checkbox" ${status} disabled>
                                                                                   </td>
                                                                                <td>
                                                                                    <a href="/admin/SanPhamModels/Edit/`+ value.IdSP + `" data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>

                                                                                    <a href="/admin/SanPhamModels/Delete/`+ value.IdSP + `" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                                                                    </td>
                                                                                </tr>`
                                        });
                                        //console.log('i nè ' + i);
                                        $('#ketqua').html(i);
                                    })
                                });
                            });

                        </script>
                    }
                    
