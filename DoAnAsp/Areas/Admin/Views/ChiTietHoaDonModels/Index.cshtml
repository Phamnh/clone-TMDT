@model IEnumerable<DoAnAsp.Areas.Admin.Models.ChiTietHoaDonModel>

@{
    ViewData["Title"] = "Index";
}

<div class="product-status mg-b-30">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="product-status-wrap">
                    <h4>Products List</h4>
                    <div class="col-lg-6 col-md-7 col-sm-6 col-xs-12">
                        <div class="header-top-menu tabl-d-n hd-search-rp">
                            <div class="breadcome-heading">
                                <form role="search" class="">
                                    <input type="text" placeholder="Search..." class="form-control">
                                    <a href=""><i class="fa fa-search"></i></a>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="add-product">
                        <a onclick="showModal('@Url.Action("Create","ChiTietHoaDonModels",null,Context.Request.Scheme)','Thêm chi tiết hóa đơn')" style="background-color:aqua; color:black; font-size:20px; margin-top: -10px;">Add chi tiết hóa đơn</a>
                    </div>
                    <table>
                        <thead>
                            <tr>
                                <th>Số lượng</th>
                                <th>Tổng tiền</th>
                                <th>Ngày lập hóa đơn</th>
                                <th>Tên sản phẩm</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Soluong)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Tongtien)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdHD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdSP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Trangthai)
                                    </td>
                                    <td>
                                        <a onclick="showModal('@Url.Action("Edit","ChiTietHoaDonModels",new {id=$"{item.IdCTHD}"},Context.Request.Scheme)','Cập nhật chi tiết hóa đơn')" data-toggle="tooltip" title="Edit" class="pd-setting-ed"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                        <a onclick="showModal('@Url.Action("Delete","ChiTietHoaDonModels",new {id=$"{item.IdCTHD}"},Context.Request.Scheme)','Xóa chi tiết hóa đơn')" data-toggle="tooltip" title="Trash" class="pd-setting-ed"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
