@model DoAnAsp.Areas.Admin.Models.ChiTietHoaDonModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" style="color: white; padding-left:20px;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Soluong" class="control-label"></label>
                <input asp-for="Soluong" class="form-control" style="border: solid 1px white;"/>
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tongtien" class="control-label"></label>
                <input asp-for="Tongtien" class="form-control" style="border: solid 1px white;"/>
                <span asp-validation-for="Tongtien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdHD" class="control-label"></label>
                <select asp-for="IdHD" class="form-control" asp-items="@(new SelectList(ViewBag.IdHD,"IdHD","NgaylapHD"))"
                        style="border: solid 1px white;"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdSP" class="control-label"></label>
                <select asp-for="IdSP" class="form-control" asp-items="@(new SelectList(ViewBag.IdSP,"IdSP","TenSP"))"
                        style="border: solid 1px white;"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Trangthai" style="border: solid 1px white;"/> @Html.DisplayNameFor(model => model.Trangthai)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="background-color:aqua; color:black; font-size:20px;"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="padding-left:20px;">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
